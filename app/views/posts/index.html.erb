<%= posts_menu %>

<h2>Forum <%= @forum.title %>: Post List</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Created At</th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to(post.title, forum_post_path(@forum, post)) %></td>
      <td><%= post.user.email %></td>
      <td><%= post.created_at %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @posts %>
Sort by date: 
<%= link_to("Descending", forum_posts_path(@forum)) %> |
<%= link_to("Ascending", forum_posts_path(@forum, :rev => "1")) %> 

